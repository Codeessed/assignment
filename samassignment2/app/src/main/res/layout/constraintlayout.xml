<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="4">

    <ImageView
        android:id="@+id/firstPic"
        android:layout_width="148dp"
        android:layout_height="176dp"
        android:background="@drawable/monkey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/secondPic"
        android:layout_width="119dp"
        android:layout_height="95dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/monkey"
        app:layout_constraintEnd_toStartOf="@id/thirdPic"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toEndOf="@id/firstPic"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/thirdPic"
        android:layout_width="145dp"
        android:layout_height="93dp"
        android:background="@drawable/monkey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/secondPic"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/forthPic"
        android:layout_width="260dp"
        android:layout_height="84dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/monkey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/secondPic"
        app:layout_constraintTop_toBottomOf="@+id/secondPic" />


</androidx.constraintlayout.widget.ConstraintLayout>